:filetype plugin on
:syntax off
:set expandtab
:set ts=4
:set breakindent
:set hlsearch
:set incsearch
:set lazyredraw
:set showmatch
:set ruler
" test

:colorscheme colors
"
" Keybindings
"

" Emacs-like move to start/end of line in insert mode
map <C-e> <esc>$
map <C-a> <esc>0
" Emacs-like delete to end (without copying to a register)
map <C-k> "_d$

" Quick exits
map zz :q!<cr>
map zx :wq<cr>

" Space to quick save
nmap <Space> :w<cr>

" Shift-tab is escape in insert mode
imap <S-TAB> <Esc>
