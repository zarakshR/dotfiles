            "tab.activeBorder": "#0091FF",
            "editorGroupHeader.tabsBackground": "#121212"
        }
    },
    "editor.tokenColorCustomizations": {
        "[Default Light+]": {
            "comments": "#777",
            "functions": "#D50000",
            "keywords": "#AA00FF",
            "types": "#E88506",
            "variables": "#01579B",
            "numbers": "#121212",
            "strings": "#008A00",
        },
        "[Default Dark+]": {
            "comments": "#555",
