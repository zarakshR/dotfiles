{
    "editor.fontFamily": "Inconsolata SemiBold",
    "terminal.integrated.fontFamily": "Inconsolata SemiBold",
    "editor.fontSize": 18,
    "editor.cursorStyle": "line",
    "editor.cursorSurroundingLines": 2,
    "editor.cursorWidth": 3,
    "editor.cursorBlinking": "solid",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.allowChords": false,
    // "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "toggle",
    "workbench.panel.defaultLocation": "right",
    "explorer.confirmDelete": true,
    "window.zoomLevel": -0.7,
    "files.insertFinalNewline": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.guides.bracketPairs": true,
    "zenMode.restore": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideStatusBar": false,
    "zenMode.hideTabs": false,
    "zenMode.centerLayout": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.snippetSuggestions": "top",
    "[python]": {
        "editor.rulers": [
            130
        ],
    },
    "[c]": {
        "editor.rulers": [
            80
        ],
    },
    "[latex]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 130
    },
    "C_Cpp.autocompleteAddParentheses": true,
    "C_Cpp.clang_format_style": "file",
    // "window.autoDetectColorScheme": true,
    "git.decorations.enabled": false,
    "workbench.colorCustomizations": {
        "[Default Light+]": {
            "editor.background": "#f5f5f5",
            "editor.foreground": "#000000",
            "sideBar.background": "#EAEAEA",
            "sideBar.foreground": "#121212",
            "sideBarSectionHeader.foreground": "#002440",
            "activityBar.background": "#CCCCCC",
            "activityBar.foreground": "#003A66",
            "panel.background": "#eaeaea",
            "statusBar.background": "#002440",
            "statusBar.foreground": "#eee",
            "statusBar.debuggingBackground": "#E67137",
            "statusBar.debuggingForeground": "#121212",
            "statusBar.noFolderBackground": "#82B0CC",
            "statusBar.noFolderForeground": "#121212",
            "banner.background": "#FFD662",
            "banner.foreground": "#121212",
            "selection.background": "#C4FFFD",
            "badge.background": "#003a66",
            "badge.foreground": "#f5f5f5",
            "gitDecoration.untrackedResourceForeground": "#6B0C54",
            "gitDecoration.deletedResourceForeground": "#ed0000",
            "gitDecoration.modifiedResourceForeground": "#003A66",
            "gitDecoration.addedResourceForeground": "#008700",
            "tab.activeBackground": "#f5f5f5",
            "tab.inactiveBackground": "#f5f5f5",
            "tab.activeBorder": "#0091FF",
            "editorGroupHeader.tabsBackground": "#eaeaea"
        },
        "[Default Dark+]": {
            "editor.background": "#000000",
            "editor.foreground": "#f5f5f5",
            "sideBar.background": "#0a0a0a",
